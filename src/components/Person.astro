---
import { getCollection, type CollectionEntry } from "astro:content"

const people = await getCollection("profile")

const { person } = Astro.props
const id = person.id
---

<a href=`/profile/${id}` target="_blank">
  <div class="person-container">
    <img src={person.data.image} alt={person.data.name} />
    <p class="name">{person.data.name}</p>
    <p class="title">{person.data.title}</p>
  </div>
</a> 

<style>
  .person-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    place-content: center;
    flex-wrap: wrap;
    img {
      width: 15em;
      height:15em;
      object-fit: cover;
      border-radius: var(--border-radius);
    }
    .name {
      font-size: 1.5em;
    }
    .title {
      font-size: 1.25em;
    }
  }
  a {
    text-decoration: none;
    color: inherit;
  }
</style>
