---
import Container from "./Container.astro"

interface Props {
  varient?: string
  main?: boolean
  id?: string
  imagelocation?: string
}

//Varients primary (default), dark, secondary,
const {
  main = false,
  id = "",
  imagelocation = "",
  varient = "primary"
} = Astro.props

const classList = []
if (imagelocation === "") {
  classList.push("padded")
}
classList.push(varient)
---

{
  main == true ? (
    <main class:list={classList} id={id}>
      <slot />
    </main>
  ) : (
    <section class:list={classList} id={id}>
      <Container imagelocation={imagelocation}>
        <slot />
      </Container>
    </section>
  )
}

<style>
  section {
    background-color: var(--primary);
    container-type: inline-size;
    container-name: section;
  }
  .padded {
    padding-block: 5rem;
    @media screen and (width < 1200px) {
      & {
        padding-block: clamp(3rem, 10vw, 5rem);
      }
    }
    @media screen and (width < 600px) {
      & {
        padding-block: clamp(1.5rem, 10vw, 3rem);
      }
    }
  }
  main {
    container-type: inline-size;
    container-name: main;
  }

  .dark {
    background-color: var(--clr-darkest);
    color: var(--clr-lightest);
  }
  .secondary {
    background-color: var(--clr-light);
    color: var(--clr-darkest);
  }
</style>
