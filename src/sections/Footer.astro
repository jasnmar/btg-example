---
import heroLogo from "../assets/BTGHero.svg"
import smallLogo from "../assets/BTGSmall.svg"
import strings from "../data/strings.json"

const today = new Date()
const year = today.getFullYear()
---

<footer>
  <div class="column">
    <div class="logo">
      <picture class="hero-logo">
        <source srcset={heroLogo.src} media="(width > 1200px)" />
        <source
          srcset={heroLogo.src}
          media="(width < 1200px) and (width > 300px)"
        />
        <source srcset={smallLogo.src} media="(width < 300px)" />
        <img class="hero-logo" src={heroLogo.src} alt={strings["logo.alttext"]} />
      </picture>
    </div>
    <div class="vision">
      <p>
        {strings["mission"]}
      </p>
    </div>
  </div>
  <div class="column">
    <a class="main-link" href="#">{strings["letsbuild.header"]}</a>
  </div>
  <div class="column">
    <div class="spread">
      <a href="#" class="main-link">{strings["getinvolved.header"]}</a>
      <a href="#" class="secondary-link">{strings["footer.privacy"]}</a>
    </div>
  </div>
  <div class="column">
    <div class="spread">
      <a href="#" class="main-link">{strings["about.header"]}</a>

      <div class="social">
        <a href="#" name="linkedin" aria-label="linkedin" target="_blank">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"
